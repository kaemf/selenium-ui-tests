{
  "name": "selenium-ui-tests",
  "version": "1.0.0",
  "description": "Лабораторна робота №4 - UI тести з Selenium",
  "main": "index.js",
  "scripts": {
    "build": "tsc --noEmit",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest --runInBand",
    "test:parallel": "jest",
    "test:unit": "jest src/",
    "test:ui": "jest tests/ --runInBand",
    "test:headless": "cross-env HEADLESS=true jest tests/ --runInBand",
    "test:chrome": "cross-env BROWSER=chrome jest tests/ --runInBand",
    "test:firefox": "cross-env BROWSER=firefox jest tests/ --runInBand"
  },
  "keywords": [
    "selenium",
    "ui-testing",
    "automation"
  ],
  "author": "Yaroslav",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/selenium-webdriver": "^4.35.4",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "jest": "^29.7.0",
    "selenium-webdriver": "^4.16.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
